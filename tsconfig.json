{
  "compilerOptions": {   
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",    
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,                   
    "noImplicitAny": true,            
    "strictNullChecks": true,         
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,             
    "esModuleInterop": true,          
    "allowSyntheticDefaultImports": true, 
    "resolveJsonModule": true,        
    "sourceMap": true,                
    "types": ["node"]                 
  },
  "include": ["src"],  
  "exclude": ["node_modules", "dist"]
}
